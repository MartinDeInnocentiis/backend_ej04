<div>
  <h1>Realtime Products</h1>

  <form id="productForm" method="POST" action="/realtimeproducts">
    <label for="productName">PRODUCT NAME:</label>
    <input
      type="text"
      id="productName"
      name="name"
      placeholder="Product name..."
    />

    <label for="productTitle">TITLE:</label>
    <input
      type="text"
      id="productTitle"
      name="title"
      placeholder="Product title..."
    />

    <label for="productDescription">DESCRIPTION:</label>
    <textarea
      id="productDescription"
      name="description"
      placeholder="Product description..."
    ></textarea>

    <label for="productPrice">PRICE:</label>
    <input
      type="number"
      id="productPrice"
      name="price"
      step="0.01"
      placeholder="Product price..."
    />

    <label for="productThumbnail">THUMBNAIL:</label>
    <input
      type="text"
      id="productThumbnail"
      name="thumbnail"
      placeholder="Thumnail´s URL..."
    />

    <label for="productCode">CODE:</label>
    <input
      type="text"
      id="productCode"
      name="code"
      placeholder="Product code..."
    />

    <label for="productStock">STOCK:</label>
    <input
      type="number"
      id="productStock"
      name="stock"
      placeholder="Product stock..."
    />

    <button type="submit">ADD</button>
  </form>
  <ul id="productList">
    {{#each products}}
      <li>
        <h3>{{name}}</h3>
        <p>Título: {{title}}</p>
        <p>Descripción: {{description}}</p>
        <p>Precio: {{price}}</p>
        <img src={{thumbnail}} />
        <button class="deleteButton" data-id="{{id}}">DELETE</button>
      </li>
    {{/each}}
  </ul>

</div>